{
    auto_https off
    admin off
}

:9000 {
    root * public
    
    # Route API requests to Symfony
    handle /api/* {
        try_files {BasePath} /index.php
    }
    
    # Route staff requests to Symfony
    handle /staff/* {
        try_files {BasePath} /index.php
    }
    
    # Handle PHP files
    handle *.php {
        try_files {path} /index.php
    }
    
    # Static files
    handle {
        try_files {path} {path}/ /index.html
        file_server
    }
    
    # Log errors
    log {
        output stderr
        format console
        level ERROR
    }
}
