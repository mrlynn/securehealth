{
    auto_https off
    admin off
}

:9000 {
    root * public
    
    # FrankenPHP configuration
    php_server
    
    # Route API requests to Symfony
    handle /api/* {
        rewrite * /index.php
        php_server
    }
    rewrite /staff/* /index.php
    
    # Handle all other requests
    try_files {path} {path}/ /index.html
    file_server
}
