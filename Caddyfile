{
    auto_https off
    admin off
}

:9000 {
    root * public
    
    # Route API and staff requests to Symfony index.php
    rewrite /api/* /index.php
    rewrite /staff/* /index.php
    
    # Try files in order: exact file, directory with index, then index.html
    try_files {path} {path}/ /index.html
    
    # Serve static files
    file_server
    
    # Log errors
    log {
        output stderr
        format console
        level ERROR
    }
}
